{
  "servers": {
    "mcp-echo-stdio": {
      "type": "stdio",
      "command": "python",
      "cwd": "${workspaceFolder}",
      "env": {
        "VIRTUAL_ENV": "${workspaceFolder}\\.venv",
        "PATH": "${workspaceFolder}\\.venv\\Scripts;${env:PATH}"
      },
      "args": [
        "-m",
        "fastmcp.cli",
        "run",
        "${workspaceFolder}/mcp_server_decorator_initparam.py:mcp",
        "--transport",
        "stdio"
      ],
      "dev": {
        "watch": "**/*.py",
        "debug": {
          "type": "debugpy"
        }
      }
    },
    "mcp-echo-http": {
      "type": "http",
      "url": "http://127.0.0.1:8080/stream",
      "headers": {
        "PREFIX": "[VSCode] "
      }
    }
  }
}
